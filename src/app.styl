@import 'nib'

body
    color: #121004
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
    font-size: 14px
    color: #374044
    //background: #F8F8F8
    background: url('img/patterns/squairy_light.png')

ul
    list-style-type: none
    margin: 0
    padding: 0

    li
        display: inline-block

a
    cursor: pointer

    &.link
        color: #66C6F8
        border-bottom: 1px solid #66C6F8

h2
    font-size: 22px
    color: #424D52

h3
    margin: 0 0 10px 0

#header
    background: #FEDB27
    border-bottom: 1px solid #CDAC19
    padding: 20px

    .title, .menu
        display: inline-block

    .title
        font-weight: bold
        margin-right: 20px
        color: #121004

    .menu
        ul
            li
                &:not(:last-child)
                    margin-right: 10px

                a
                    color: #6F5F11
                    padding: 10px

                    &:hover
                        color: #374044

#content
    border: 1px solid #CECECE
    background: #FFF
    margin: 0 auto
    margin-top: 20px
    margin-bottom: 20px
    width: 800px

    .input
        padding: 8px 7px 7px
        box-sizing: border-box
        border: 1px solid #CCC
        box-shadow: inset 2px 2px 4px rgba(0,0,0,0.05)

        &:focus
            outline: none
            border: 1px solid #66C6F8
            box-shadow: inset 2px 2px 4px rgba(#66C6F8, 0.1)

    .button
        background: rgba(255, 255, 255, 0.75)
        padding: 8px 22px
        transition: opacity 0.1s
        border: 1px solid #BFBFBF
        border-radius: 2px
        font-weight: bold
        color: #374044
        font-size: 14px
        cursor: pointer
        display: inline-block
        user-select: none
        text-align: center

        &:hover
            background: rgba(0,0,0,0.05)

        &.primary
            color: #FFF
            border-color: rgba(0,0,0,0.15)
            background: #0079FF

            &:hover
                background: #006DE6

        &.github
            color: #FFF
            border-color: rgba(0,0,0,0.15)
            background: lighten(#535353, 10%)

            &:hover
                background: #535353

    .header
        border-bottom: 2px solid #FEDB27
        padding: 20px
        margin-bottom: 10px

        h2
            margin: 0

    .form
        padding: 20px

        .box
            &:not(:first-child)
                border-top: 1px dotted #CCC
                margin-top: 32px
                padding-top: 26px

        .field
            &:after
                clear: both
                display: block
                content: ''

            label, input, textarea
                display: block
                width: 100%

            label
                margin: 10px 0

            .half
                width: 50%
                float: left
                box-sizing: border-box
                position: relative

                &.first
                    padding-right: 40px
                    border-right: 1px solid #CCC

                    &:after
                        content: 'or'
                        color: #CCC
                        position: absolute
                        top: 7px
                        right: -7px
                        font-style: italic
                        padding: 2px 0
                        background: #FFF

                &.second
                    padding-left: 40px

            .preview
                float: right
                cursor: pointer

                &:before
                    content: ''
                    background: url('img/icomoon/16px/eye.png')
                    opacity: 0.5
                    transition: opacity 0.1s
                    display: inline-block
                    width: 16px
                    height: 14px
                    cursor: pointer
                    margin-right: 6px

                &:hover                    
                    &:before
                        opacity: 0.75

    .footer
        border-top: 1px solid #E2E2E2
        padding: 20px

        .button.primary
            float: right

        &:after
            clear: both
            display: block
            content: ''

#results
    display: block
    //display: none
    max-height: 100px
    overflow-y: scroll
    box-shadow: inset -2px -2px 4px rgba(0,0,0,0.05)
    border-bottom: 1px solid #CCC
    margin-top: 6px

    ul
        li
            display: block
            padding: 8px 4px

            &:not(:last-child)
                border-bottom: 1px solid rgba(#CCC, 0.5)

            &:nth-child(even)
                background: rgba(0,0,0,0.01)

            &:after
                clear: both
                display: block
                content: ''

            a
                span
                    background: rgba(#FEDB27, 0.5)

            .ago
                margin-left: 6px
                font-size: 12px
                color: #AAA

    .tag
        padding: 2px 8px
        border-color: rgba(0,0,0,0.15)
        border-radius: 2px
        font-weight: bold
        display: inline-block
        user-select: none
        font-size: 12px
        float: right

        &.solved
            //color: #FFF
            background: #FEDB27

        &.discussed
            color: #FFF
            background: #CACACA