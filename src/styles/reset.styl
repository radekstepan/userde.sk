body
    font-family: 'Source Sans Pro', sans-serif
    font-size: 16px
    color: #374044
    background: #F8F8F8
    background: url('img/patterns/squairy_light.png')

ul
    list-style-type: none
    margin: 0
    padding: 0

    li
        display: inline-block

::-webkit-input-placeholder {
    font-weight: normal
}

a
    cursor: pointer

    &.link
        color: #0079FF
        border-bottom: 1px solid rgba(#0079FF, 0.5)
        text-decoration: none

p
    margin: 6px 0

h2
    font-size: 22px

h3
    margin: 0 0 10px 0