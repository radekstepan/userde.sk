@import 'nib'

// Header duh.
#header
    background: #FEDB27
    border-bottom: 1px solid #CDAC19
    padding: 20px

    .wrapper
        width: 800px
        margin: 0 auto

    .title, .menu
        display: inline-block

    .title
        font-weight: bold
        margin-right: 20px
        color: #121004
        font-size: 20px

    .menu
        ul
            li
                &:not(:last-child)
                    margin-right: 10px

                &.active
                    font-weight: bold

                a
                    color: #6F5F11
                    padding: 10px

                    &:hover
                        color: #374044

// A generic box style.
#promo, #content
    &.box
        background: #FFF
        border: 1px solid #CECECE
        margin: 0 auto
        margin-bottom: 40px
        width: 800px

// Boxes without a header.
#promo.box
    margin-top: 80px
    border-top: 3px solid #FEDB27

    $box_padding = 35px

    .left, .right
        float: left
        padding: $box_padding
        box-sizing: border-box
        position: relative

    $box_top_height = 50px

    // Login.
    &.login
        .left, .right
            height: 360px
        
        .left
            background-image: url('img/hires/lighthouse.jpg')
            background-position: 0 -40px
            background-size: 140% auto

    // Signup.
    &.signup
        .left, .right
            height: 800px

        .left
            background-image: url('img/hires/traffic.jpg')
            background-size: 140% auto

    .left
        background-repeat: no-repeat
        border-right: 1px solid #CECECE
        width: 450px

        .title, .link
            background: rgba(0,0,0,0.5)
            padding: 4px 6px

        .title
            font-weight: bold
            color: #FFF
            font-size: 20px
            margin-top: $box_top_height
            margin-bottom: 20px
            display: inline-block

        .link
            color: #FFF
            border-bottom: 1px solid rgba(#FFF, 0.5)

        // Links and content at the foot.
        .bottom
                bottom: $box_padding - 4px
                left: $box_padding - 6px
                position: absolute

                *:not(:last-child)
                    margin-right: 30px

    .right
        width: 350px

        .header
            margin-top: $box_top_height

        h1
            margin: 0
            margin-bottom: 20px

        .form
            margin-bottom: 20px

        // Links and content at the foot.
        .bottom
            bottom: $box_padding
            left: $box_padding
            position: absolute

            *:not(:last-child)
                margin-right: 30px

    &:after
        clear: both
        content: ""
        display: block

// Inner app pages.
#content.box
    margin-top: 40px

    .header
        padding: 20px
        margin-bottom: 10px
        background: #F7F7F7
        // border-top: 2px solid #52A7D3
        border-bottom: 1px solid rgba(102, 198, 248, 0.2)

        h2
            margin: 0

        p
            opacity: 0.8
            margin-bottom: 0

    .form
        padding: 20px

        .field
            // Either-or field.
            .half
                width: 50%
                float: left
                box-sizing: border-box
                position: relative

                &.first
                    padding-right: 40px
                    border-right: 1px solid #CCC

                    &:after
                        content: 'or'
                        color: #CCC
                        position: absolute
                        top: 9px
                        right: -7px
                        font-style: italic
                        padding: 2px 0
                        background: #FFF

                &.second
                    padding-left: 40px

            // Show textarea preview.
            .preview
                float: right
                cursor: pointer

                &:before
                    content: ''
                    background: url('img/icomoon/16px/eye.png')
                    opacity: 0.5
                    transition: opacity 0.1s
                    display: inline-block
                    width: 16px
                    height: 14px
                    cursor: pointer
                    margin-right: 6px

                &:hover                    
                    &:before
                        opacity: 0.75

    // Footer showing a submit button.
    .footer
        border-top: 1px solid #E2E2E2
        padding: 20px

        .button.primary
            float: right

        &:after
            clear: both
            display: block
            content: ''

// Search results listing.
#results
    display: block
    max-height: 126px
    overflow-y: scroll
    border: 1px solid rgba(#66C6F8, 40%)
    border-top: 0

    ul
        li
            display: block
            padding: 8px

            &:not(:last-child)
                border-bottom: 1px solid rgba(#CCC, 0.5)

            &:nth-child(even)
                background: rgba(0,0,0,0.004)

            &:after
                clear: both
                display: block
                content: ''

            a
                span
                    background: rgba(#FEDB27, 0.5)
                    color: #374044
                    padding: 0 2px
                    margin: 0 -2px

            .ago
                margin-left: 6px
                font-size: 12px
                color: #AAA

    .tag
        padding: 2px 8px
        border-color: rgba(0,0,0,0.15)
        border-radius: 2px
        font-weight: bold
        display: inline-block
        user-select: none
        font-size: 12px
        float: right

        &.solved
            background: #FEDB27

        &.discussed
            color: #FFF
            background: #CACACA